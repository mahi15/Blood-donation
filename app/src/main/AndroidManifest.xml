<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.nullvoid.blooddonation">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <uses-sdk android:minSdkVersion="11"/>

        <activity android:name=".MainActivity"
            android:theme="@style/AppThemeNoActionBar"/>

        <activity
            android:name=".LoginActivity"
            android:windowSoftInputMode="adjustPan|adjustResize">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".UserSignupActivity"
            android:theme="@style/AppThemeNoActionBar"
            android:label="Sign Up" />
        <activity
            android:name=".DoneeRequestActivity"
            android:theme="@style/AppThemeNoActionBar"
            android:label="Request Blood" />
        <activity
            android:name=".DonorRegistrationActivity"
            android:theme="@style/AppThemeNoActionBar"
            android:label="Donate Blood" />
        <activity
            android:name=".DonorListFragment"
            android:label="Donors"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".AdminConsoleActivity"
            android:theme="@style/AppThemeNoActionBar"
            android:label="Console" />

        <activity android:name=".DonorSelectionActivity"
            android:label="Select a Donor" />
    </application>

</manifest>