<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_vertical|center_horizontal"
    android:orientation="vertical"
    android:background="#fff">

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:capitalize="characters"
        android:padding="20dp"
        android:text="@string/app_name"
        android:textAlignment="center"
        android:textColor="@color/colorPrimary"
        android:textSize="36sp"
        android:textStyle="bold" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawingCacheQuality="auto">

        <ImageView
            android:id="@+id/logo_background"
            android:layout_width="wrap_content"
            android:layout_height="350dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp"
            app:srcCompat="@drawable/logo_background" />

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_above="@+id/drop_2"
            android:layout_centerHorizontal="true"
            app:srcCompat="@drawable/blood_packet" />

        <ImageView
            android:id="@+id/light"
            android:layout_width="97dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="45dp"
            android:adjustViewBounds="true"
            android:scaleType="fitXY"
            app:srcCompat="@drawable/logo_light"
            android:layout_alignBottom="@+id/logo_background"
            android:layout_centerHorizontal="true" />

        <ImageView
            android:id="@+id/drop_1"
            android:layout_width="53dp"
            android:layout_height="68dp"
            android:layout_above="@+id/light"
            android:layout_centerHorizontal="true"
            app:srcCompat="@drawable/logo_drop1" />

        <ImageView
            android:id="@+id/drop_2"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_above="@+id/drop_1"
            android:layout_centerHorizontal="true"
            app:srcCompat="@drawable/logo_drop2" />

    </RelativeLayout>

</LinearLayout>